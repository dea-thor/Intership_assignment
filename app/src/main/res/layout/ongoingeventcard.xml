<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="230sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/OnGoingEventCardView"
    android:layout_margin="5sp"
    android:elevation="5dp"
    app:cardCornerRadius="17sp">



        <ImageView
            android:id="@+id/ongoingImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:tint="#6F000000"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sun - 11am"
            android:textSize="16dp"
            android:textColor="#000"
            android:padding="3dp"
            android:textStyle="bold"
            android:background="@drawable/datehighlighter"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/dateTime"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="10dp"
            android:text="HI this is snehdeep"
            android:textSize="20sp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="27sp"
            android:id="@+id/eventName"
            android:textColor="#fff"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:text="hwllo"
            android:textStyle="bold"
            android:id="@+id/details"
            android:textColor="#fff"
            android:layout_marginBottom="5sp"
                android:layout_gravity="bottom"/>








</androidx.cardview.widget.CardView>