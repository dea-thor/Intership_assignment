<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170sp"
    android:layout_height="230sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10sp"
    android:id="@+id/upcomingEventCardView"
    android:layout_marginLeft="2.5sp"
    android:layout_marginRight="2.5sp"

    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/upcomingEventImage"
        android:scaleType="centerCrop"
        android:tint="#6A000000"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sun - 11am"
        android:textSize="16dp"
        android:textColor="#000"
        android:padding="3dp"
        android:textStyle="bold"
        android:background="@drawable/datehighlighter"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/dateTimeu"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginLeft="10dp"
        android:text="HI this is snehdeep"
        android:textSize="20sp"

        android:id="@+id/eventNameu"
        android:textColor="#fff"
        android:textStyle="bold"


        />

    <TextView
        android:id="@+id/detailsu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="10dp"
        android:text="hwllo"
        android:textColor="#fff"
        android:textSize="15sp"

        android:textStyle="bold" />
    </LinearLayout>



</androidx.cardview.widget.CardView>